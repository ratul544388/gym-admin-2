generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId String
  name   String
  email  String @unique
  image  String
}

model Member {
  id             String  @id @default(auto()) @map("_id") @db.ObjectId
  memberId       Int     @unique
  name           String
  age            Int?
  address        String?
  phone          String? @unique
  image          String?
  membershipPlan String
  gender         Gender

  createdAt DateTime @default(now())
  startDate DateTime
  endDate   DateTime
  revenue   Int

  membershipRecoreds MembershipRecord[]
}

model MembershipRecord {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  member   Member @relation(fields: [memberId], references: [id])
  memberId String @db.ObjectId
  revenue  Int

  createdAt DateTime @default(now())

  startDate      DateTime
  endDate        DateTime
  membershipPlan String
}

model Default {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  savedRevenue Int    @default(0)
}

enum Gender {
  MALE
  FEMALE
}
