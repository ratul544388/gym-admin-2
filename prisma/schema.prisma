generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String @unique
  name  String
  email String @unique
  image String
}

model Member {
  id             Int     @id @default(autoincrement())
  name           String
  age            String?
  address        String?
  phone          String?
  image          String?
  membershipPlan String
  gender         Gender

  createdAt DateTime @default(now())
  startDate DateTime
  endDate   DateTime
  revenue   Int

  renews Renew[]
}

model Renew {
  id Int @id @default(autoincrement())

  member         Member   @relation(fields: [memberId], references: [id], onDelete: Cascade)
  revenue        Int
  memberId       Int
  createdAt      DateTime @default(now())
  startDate      DateTime
  endDate        DateTime
  membershipPlan String
}

enum Gender {
  MALE
  FEMALE
}
