generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId String
  name   String
  email  String @unique
  image  String
}

model Member {
  id             String  @id @default(auto()) @map("_id") @db.ObjectId
  memberId       Int @unique
  name           String
  age            String?
  address        String?
  phone          String?
  image          String?
  membershipPlan String
  gender         Gender

  createdAt DateTime @default(now())
  startDate DateTime
  endDate   DateTime
  revenue   Int

  renews Renew[]
}

model Renew {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  member         Member   @relation(fields: [memberId], references: [id], onDelete: Cascade)
  revenue        Int
  memberId       String   @db.ObjectId
  createdAt      DateTime @default(now())
  startDate      DateTime
  endDate        DateTime
  membershipPlan String
}

enum Gender {
  MALE
  FEMALE
}
